<header class="relative" id="sc1">
    <!-- Mainmenu-markup-start -->
    <div class="mainmenu-area navbar-fixed-top navbar-header-custom" data-spy="affix" data-offset-top="10">
        <nav class="navbar">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainmenu">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--Logo-->
                    <% if (typeof user != 'undefined' && typeof user.office_id !== 'undefined' && user.office_id) { %>
                        <a href="/home?officeId=<%= user.office_id %>" class="navbar-left show">
                    <% } else { %>
                        <a href="/home" class="navbar-left show">
                    <% } %>
                        <img src="/images/icon.jpg" alt="icon" class="icon-image">
                        <span class="logo-text"> FBook</span>
                    </a>
                </div>
                <!--Toggle-button-->

                <!--Active User-->
                <% if (typeof user != 'undefined' && typeof user.name !== 'undefined' && user.name) { %>
                    <div class="nav navbar-right">
                    <div class="active-user navbar-left active">
                        <ul class="list-unstyled">
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <% if (typeof user != 'undefined' && typeof user.avatar !== 'undefined' && user.avatar) { %>
                                        <img src="<%= user.avatar %>" class="avatar" alt="avatar" /><span class="badge active-user-notification"></span>
                                        <div class="hidden" id="get-user-id"><%= user.id%></div>
                                    <% }
                                    else { %>
                                        <img src="/images/user_default.png" class="img-circle img-thumbnail" alt="avatar" />
                                    <% } %>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="/users/my_profile"> <span><i class="icofont icofont-user"></i></span> <%= __('Profile') %></a>
                                    </li>
                                    <li>
                                        <a href="/books/add"> <span><i class="glyphicon glyphicon-share-alt"></i></span> <%= __('Share books')%></a>
                                    </li>
                                    <li>
                                        <a href="/books/waiting_approve"> <span><i class="glyphicon glyphicon-ok"></i></span> <%= __('Approve requests')%> </a>
                                    </li>
                                    <li>
                                        <a href="/users/my_books"> <span><i class="icofont icofont-read-book"></i></span> <%= __('My Books')%> </a>
                                    </li>
                                     <% if(user.role == 'admin') { %>
                                        <li>
                                            <a href="/admin/waiting-request-edit-book"> <span><i class="icofont icofont-ui-settings"></i></span> <%= __('Approve requests edit book')%> </a>
                                        </li>
                                    <% } %>
                                    <li>
                                        <a href="/logout"> <span><i class="icofont icofont-logout"></i></span> <%= __('Log Out')%> </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                <% } %>

                <!--Mainmenu list-->
                <div class="navbar-right in fade" id="mainmenu">
                    <ul class="nav navbar-nav nav-white text-uppercase">
                        <li class="active">
                            <% if (typeof user != 'undefined' && typeof user.office_id !== 'undefined' && user.office_id) { %>
                                <a href="/home?officeId=<%= user.office_id %>"><%= __('Home')%></a>
                            <% } else { %>
                                <a href="/home"><%= __('Home') %></a>
                            <% } %>
                        </li>
                        <% if (typeof(offices.items) !== 'undefined' && typeof(offices) !== 'undefined' && offices && offices.items) { %>
                            <li class="dropdown">
                                <% offices.items.forEach(function(office) { %>
                                    <% if (typeof(officeId) !== 'undefined' && officeId == office.id) { %>
                                        <a href="#" class="dropdown-toggle opacity-0" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= office.area %><span class="caret"></span></a>
                                     <% } %>
                                <% }) %>
                                <% if (typeof(officeId) === 'undefined') { %>
                                    <a href="#" class="dropdown-toggle opacity-0" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Framgia<span class="caret"></span></a>
                                <% } %>
                                <ul class="dropdown-menu">
                                    <li><a href="/home/all_office" class="office-dropdow-a">Framgia</a></li>
                                    <% offices.items.forEach(function(office) { %>
                                        <li><a href="/home?officeId=<%= office.id %>" class="office-dropdow-a"><%= office.area %></a></li>
                                    <% }) %>
                                </ul>
                            </li>
                        <% } %>
                        <li>
                            <a target="_blank" href="/users/fbook_app" class="icon-header"><span><i class="icofont icofont-iphone nav-icon"></i></span></a>
                        </li>

                        <li>
                        <% if (typeof lang !== 'undefined' && lang == 'en') { %>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span><img src="/images/english.png" class="image-flag-be"></span></a>
                        <% } else if (typeof lang !== 'undefined' && lang == 'vi') { %>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span><img src="/images/vietnam.png" class="image-flag-be"></span></a>
                        <% } else if (typeof lang !== 'undefined' && lang == 'jp') { %>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span><img src="/images/nhatban.png" class="image-flag-be"></span></a>
                        <% } else { %>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span><img src="/images/english.png" class="image-flag-be"></span></a>
                        <% } %>
                            <ul class="dropdown-menu language">
                                <li>
                                    <a href="/change-lang/vi" class="text-i18n" data-img="/images/vietnam.png"><img class="image-choose" src="/images/vietnam.png"/><span>VietNam </span></a>
                                </li>
                                <li>
                                    <a href="/change-lang/en" class="text-i18n" data-img="/images/english.png"><img class="image-choose" src="/images/english.png"/><span>English</span></a>
                                </li>
                                <li>
                                    <a href="/change-lang/jp" class="text-i18n" data-img="/images/nhatban.png"><img class="image-choose" src="/images/nhatban.png"/><span>日本語</span></a>
                                </li>
                            </ul>
                        </li>
                        <li data-toggle="tooltip" title="MORE TOOLS">
                            <a target="_blank" href="https://wsm.framgia.vn/all-tools" class="icon-header">
                            <img src="/images/app_icon.png" class="icofont-fw nav-icon nav-moretoolicon"></a>
                        </li>
                        <% if (typeof user != 'undefined' && typeof user.name !== 'undefined' && user.name) { %>
                            <li data-toggle="tooltip" title="NOTIFICATION">
                                <a href="#" class="dropdown-toggle notification_onclick_icon dropdown-toggle" data-toggle="dropdown">
                                    <i class="icofont icofont-notification nav-icon"></i>
                                </a>
                                <span class="badge active-notification count_Notifications" id="notification_<%=user.id%>"></span>
                                <ul class="dropdown-menu dropdown-menu-notification">
                                    <div class="arrow-up-border"></div>
                                    <div class="arrow-up"></div>
                                    <div class="notifi-popup clearfix">
                                        <span class="text-color-noti notifi-headers">Notifications</span>
                                        <input type="button" class="button-seen" onclick="return mark_read_all_notifications()" value="Mark All as Read">
                                    </div>
                                    <div id="box_dropdown_noti" class="scroll-dropdown-noti"></div>
                                    <li>
                                        <a href="/notifications" class="text-color-noti dropdown-notification-footer clearfix">view all</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="#"><%= user.name %></a>
                            </li>
                        <% }
                        else { %>
                            <li>
                                <a href="/login">Login with WSM</a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="space-100"></div>
    <!-- Header-jumbotron-end -->
    <% if (typeof(isHomePage) !== 'undefined' && isHomePage) { %>
        <%- include header_search.ejs %>
    <% } %>
</header>
