<section class="content-header">
    <h1><%= __('Book infomation') %></h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-11">
            <nav aria-label="Page navigation example">
                <ul class="pagination pull-right">
                    <%- paginate %>
                </ul>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-10 offset-1">
            <div class="box box-custom">
                <div class="box-tools tool-fix-width">
                    <form method="GET" action="/admin/books/search">
                        <div class="input-group input-group-sm">
                            <select name="filter_type" class="form-control pull-right padding-select">
                                    <option value="1"><%= __('Search by') %>: <%= __('Title') %></option>
                                    <option value="2"><%= __('Search by') %>: <%= __('Author') %></option>
                            </select>
                            <input type="text" name="key_word" class="form-control pull-right" placeholder="Input...">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><%= __('Book list') %></h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body no-padding">
                    <table class="table table-hover table-responsive">
                        <tr>
                            <th><%= __('Title') %></th>
                            <th><%= __('Description') %></th>
                            <th><%= __('Author') %></th>
                            <th><%= __('Branch') %></th>
                            <th><%= __('Total Page') %></th>
                            <th class="text-center"><%= __('Create Date') %></th>
                            <th></th>
                        </tr>
                        <% if (dataRequest.items.data.length > 0) { %>
                            <% dataRequest.items.data.forEach(function(data) { %>
                            <tr class="cursor-hover" id="book<%= data.id %>">
                                <td class="text-center"><%= data.title %></td>
                                <td>
                                    <%= data.description.substring(0, 100) %> . . .
                                </td>
                                <td><%= data.author %></td>
                                <td><%= data.office.name %></td>
                                <td><%= data.total_page %></td>
                                <td class="text-center"><%= data.created_at %></td>
                                <td>
                                    <button type="button" class="delete_book" value="<%= data.id %>" title="<%= __('Delete book') %>"><i class="fa fa-trash-o"></i></button>
                                </td>
                            </tr>
                            <% }) %>
                        <% } %>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
    <div class="row">
        <div class="col-11">
            <nav aria-label="Page navigation example">
                <ul class="pagination pull-right">
                    <%- paginate %>
                </ul>
            </nav>
        </div>
    </div>
</section>
