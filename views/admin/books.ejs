<section class="content-header">
    <h1><%= __('Book infomation') %></h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-11">
            <nav aria-label="Page navigation example">
                <ul class="pagination pull-right">
                    <%- paginate %>
                </ul>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-10 offset-1">
            <div class="box box-custom">
                <div class="box-tools tool-fix-width">
                    <form method="GET" action="/admin/books/search">
                        <div class="input-group input-group-sm">
                            <select name="filter_type" class="form-control pull-right padding-select">
                                    <option value="1"><%= __('Search by') %>: <%= __('Title') %></option>
                                    <option value="2"><%= __('Search by') %>: <%= __('Author') %></option>
                            </select>
                            <input type="text" name="key_word" class="form-control pull-right" placeholder="Input...">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><%= __('Book list') %></h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body no-padding table-box">
                    <table class="table table-hover table-responsive table-books">
                        <tr>
                            <th><%= __('Title') %></th>
                            <th><%= __('Author') %></th>
                            <th><%= __('Branch') %></th>
                            <th class="text-center"><%= __('Create Date') %></th>
                            <th></th>
                            <th></th>
                        </tr>
                        <% if (dataRequest.items.data.length > 0) { %>
                            <% dataRequest.items.data.forEach(function(data) { %>
                            <tr class="cursor-hover" id="book<%= data.id %>">
                                <td class="text-center"><%= data.title %></td>
                                <td><%= data.author %></td>
                                <td><%= data.office.name %></td>
                                <td class="text-center"><%= data.created_at %></td>
                                <td>
                                    <button href="javascript:void(0)" data-toggle="modal" data-target="#myModal<%= data.id %>" data-id="<%= data.id %>"><i class="fa fa-eye"></i></button> 
                                </td>
                                <td>
                                    <button type="button" class="delete_book" value="<%= data.id %>" title="<%= __('Delete book') %>"><i class="fa fa-trash-o"></i></button>
                                </td>
                            </tr>
                            <div class="modal fade bs-example-modal-lg modal-book-detail" id="myModal<%= data.id %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="myLargeModalLabel"><%= __('Book detail') %></h4>
                                            <button type="button" class="close close-btn " data-dismiss="modal" aria-hidden="true">Ã—</button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <% if (data.image && data.image.web.thumbnail_path !== undefined) { %>
                                                        <img src="<%= data.image.web.thumbnail_path %>" 
                                                            class="media-object img-avatar-book" 
                                                            alt="<%= data.title %>">
                                                    <% } else { %>
                                                        <img src="/images/book_thumb_default.jpg" 
                                                            class="media-object img-avatar-book" 
                                                            alt="<%= data.title %>">
                                                    <% } %>
                                                </div>
                                                <div class="col-sm-9">
                                                    <dl class="dl-horizontal">
                                                        <dt><%= __('Title') %></dt>
                                                        <dd><strong><%= data.title %></strong></dd>
                                                        <dt><%= __('Description') %></dt>
                                                        <dd><%= data.description %></dd>
                                                        <dt><%= __('Author') %></dt>
                                                        <dd><%= data.author %></dd>
                                                        <dt><%= __('Branch') %></dt>
                                                        <dd><%= data.office.name %></dd>
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer padding-15 text-right">
                                            <a href="javascript:void(0)" class="btn btn-default waves-effect text-left btn-lg font-size-14" data-dismiss="modal"><%= __('Close') %></a>
                                        </div>
                                    </div>
                                    <!-- /.modal-content -->
                                </div>
                            </div>
                            <% }) %>
                        <% } %>
                    </table>
                    
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
    <div class="row">
        <div class="col-11">
            <nav aria-label="Page navigation example">
                <ul class="pagination pull-right">
                    <%- paginate %>
                </ul>
            </nav>
        </div>
    </div>
</section>
