<div class="space-50"></div>
<section class="relative">
    <div class="container">
        <div class="panel">
            <div class="panel-heading"></div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="notification">
                        <div class="row event-list">
                            <h2 class="text-center"> <b><%= __('Search keyword') %>:</b> <%= keyword %> </h2>
                            <hr>
                            <div class="col-xs-12 col-sm-6 col-sm-offset-0 col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h2><strong><%= __('Search Book By Title') %></strong></h2>
                                        <div class="event-item wow fadeInRight">
                                            <% if (dataRequest.titles) { %>
                                            <ul class="p-0">
                                                <% if (dataRequest.titles.data.length) { %>
                                                    <% dataRequest.titles.data.forEach(function (book) { %>
                                                        <li class="search-page-li">
                                                            <a href="/books/<%= book.id %>" class="search-book-url">
                                                                <% if (book.image) { %>
                                                                    <img src="<%= book.image.web.thumbnail_path %>" class="search-page-img">
                                                                <% } else { %>
                                                                    <img src="/images/book_thumb_default.jpg", class="search-page-img">
                                                                <% } %>
                                                                <b class="book-search"> 
                                                                    <%= book.title %><br>
                                                                    <p class="author-search"> <%= book.author %></p>
                                                                </b>
                                                            </a></li>
                                                    <% }) %>
                                                <% } %>
                                            </ul>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-md-12">
                                        <h2><strong><%= __('Search Book By Description') %></strong></h2>
                                        <div class="event-item wow fadeInRight">
                                            <% if (dataRequest.descriptions) { %>
                                            <ul class="p-0">
                                                <% if (dataRequest.descriptions.data.length) { %>
                                                    <% dataRequest.descriptions.data.forEach(function (book) { %>
                                                        <li class="search-page-li">
                                                            <a href="/books/<%= book.id %>" class="search-book-url">
                                                                <% if (book.image) { %>
                                                                    <img src="<%= book.image.web.thumbnail_path %>" class="search-page-img">
                                                                <% } else { %>
                                                                    <img src="/images/book_thumb_default.jpg", class="search-page-img">
                                                                <% } %>
                                                                <b class="book-search"> 
                                                                    <%= book.title %><br>
                                                                    <p class="author-search"> <%= book.author %></p>
                                                                </b>
                                                            </a></li>
                                                    <% }) %>
                                                <% } %>
                                            </ul>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-sm-offset-0 col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h2><strong><%= __('Search Book By Author') %></strong></h2>
                                        <div class="event-item wow fadeInRight">
                                            <% if (dataRequest.authors) { %>
                                            <ul class="p-0">
                                                <% if (dataRequest.authors.data.length) { %>
                                                    <% dataRequest.authors.data.forEach(function (book) { %>
                                                        <li class="search-page-li">
                                                            <a href="/books/<%= book.id %>" class="search-book-url">
                                                                <% if (book.image) { %>
                                                                    <img src="<%= book.image.web.thumbnail_path %>" class="search-page-img">
                                                                <% } else { %>
                                                                    <img src="/images/book_thumb_default.jpg", class="search-page-img">
                                                                <% } %>
                                                                <b class="book-search"> 
                                                                    <%= book.title %><br>
                                                                    <p class="author-search"> <%= book.author %></p>
                                                                </b>
                                                            </a></li>
                                                    <% }) %>
                                                <% } %>
                                            </ul>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-md-12">
                                        <h2><strong><%= __('Search User') %></strong></h2>
                                        <div class="event-item wow fadeInRight">
                                            <% if (dataRequest.users) { %>
                                            <ul class="p-0">
                                                <% if (dataRequest.users.data.length) { %>
                                                    <% dataRequest.users.data.forEach(function (user) { %>
                                                        <li class="search-page-li">
                                                            <a href="/users/<%= user.id %>" class="search-book-url">
                                                                <% if (user.avatar) { %>
                                                                    <img src="<%= user.avatar %>" class="avatar search-page-img owner-page-search-image img-circle"><b class="book-search">
                                                                <% } else { %>
                                                                    <img src="/images/user/icon_user_default.png" class="avatar search-page-img owner-page-search-image img-circle">
                                                                <% } %>
                                                                <b class="book-search"> 
                                                                    <%= user.name %><br>
                                                                    <p class="author-search"> <%= user.office.area %></p>
                                                                </b>
                                                            </a></li>
                                                    <% }) %>
                                                <% } %>
                                            </ul>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
