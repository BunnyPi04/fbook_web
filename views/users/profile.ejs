                    </div>

                    <% if (userId === user.id) { %>
                        <% if (!isTabPaneActived && pageSuggest !== 1) {
                            isTabPaneActived = true;
                        %>
                            <div class="tab-pane fade in active" id="suggested_books">
                        <% } else { %>
