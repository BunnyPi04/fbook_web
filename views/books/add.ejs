<section class="gray-bg">
    <div class="space-20"></div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 text-center">
                <h2 class="text-danger">Add <strong>Your Book</strong></h2>
                <div class="space-10"></div>
                <div class="title-bar blue">
                    <ul class="list-inline list-unstyled">
                        <li><i class="icofont icofont-square"></i></li>
                        <li><i class="icofont icofont-square"></i></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="space-20"></div>
        <div class="loader"></div>
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                <div id="modelSpace"></div>
                <div class='suggestedTitle'></div>
                <button class="btn btn-primary btn-xs" id="fillSuggestData"> Import data book </button>
                <div class="space-10"></div>
                <form action="/books/add" id="form-add-book" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" name="title" id="title" class="form-control bg-danger" placeholder="Enter your book title..." required="required">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="author">Author</label>
                                <input type="text" id="author" name="author" class="form-control bg-danger" placeholder="Enter your book author..." required="required">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="office">Office</label>
                                <select id="office" name="office_id" class="form-control bg-danger" required="required">
                                    <% offices.items.forEach(function (office) { %>
                                        <option value="<%= office.id %>"><%= office.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="category">Category</label>
                                <select id="category" class="form-control bg-danger" name="category_id" required="required">
                                    <% categories.items.forEach(function (category) { %>
                                        <option value="<%= category.id %>"><%= category.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="publish_date">Publish date</label>
                                <input type="text" id="publish_date" name="publish_date" class="form-control bg-danger datepicker" placeholder="Enter your book code...">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea name="description" id="description" cols="67" rows="8" required="required"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="row-image1">
                        <div class="col-xs-12 col-sm-8">
                            <div class="form-group">
                                <input type="file" id="image1" name="image" accept="Image/*" key="1" />
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                            <span class="glyphicon glyphicon-plus btn-info btn-xs" id="btn-plus1" data-toggle="tooltip" title="Add more image"></span>
                            <span class="glyphicon glyphicon-minus btn-danger btn-xs hidden" id="btn-minus1" data-toggle="tooltip" title="Clear image"></span>
                        </div>
                        <div class="col-xs-12 col-sm-6">
                            <img id="pre-img1" class="pre-img hidden" />
                        </div>
                    </div>
                    <div id="append-aria"></div>
                    <div class="row">
                        <div class="space-20"></div>
                        <div class="col-xs-12 col-sm-6">
                            <button type="submit" class="btn btn-primary btn-xs" id="btn-add-book">Create Book<i class="fa fa-long-arrow-right"></i></button>
                            <input type="reset" class="btn btn-danger btn-xs"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="space-30"></div>
</section>

<%- contentFor('appjs') %>
<script src="/javascripts/books/book.js" type="text/javascript"></script>
<script src="/javascripts/books/suggestData.js" type="text/javascript"></script>
<script type="text/javascript">
    $('#publish_date').datepicker();
    $('#form-add-book').validate({
        highlight: function(element) {
            $(element).closest('.form-group').addClass('has-error');
        },
        unhighlight: function(element) {
            $(element).closest('.form-group').removeClass('has-error');
        },
        errorElement: 'p',
        errorClass: 'error',
        errorPlacement: function(error, element) {
            error.insertAfter(element);
        }
    });

    $('#btn-add-book').on('click', function (e) {
        e.preventDefault();
        Book.addNew();
    });

    var i = 1;

    $('#btn-plus' + i).on('click', function (e) {
        j = i + 1;
        var cloneUpload = $('#row-image' + i).clone(true).attr('id', 'row-image' + j);
        cloneUpload.find('#btn-plus' + i).attr('id', 'btn-plus' + j);
        cloneUpload.find('#btn-minus' + i).attr('id', 'btn-minus' + j).removeClass('hidden');
        cloneUpload.find('#image' + i).attr('id', 'image' + j).attr('key', j).val('');
        cloneUpload.find('#pre-img' + i).attr('id', 'pre-img' + j).addClass('hidden').attr('src', '');
        $("#append-aria").append(cloneUpload);
        $(this).addClass('hidden');
        $('#btn-minus' + i).addClass('hidden');
        i++;
    });

    $('#btn-minus' + i).on('click', function (e) {
        j = i - 1;
        $('#row-image' + i).remove();
        $('#btn-plus' + j).removeClass('hidden');
        if (j != 1) {
            $('#btn-minus' + j).removeClass('hidden');
        }
        i--;
    });

    for (k = 1; k <= i; k++) {
        $('#image' + k).on('change', function () {
            var reader = new FileReader();
            var key = $(this).attr('key');
            reader.onload = function (e) {
                document.getElementById('pre-img' + key).src = e.target.result;
                $('#pre-img' + key).removeClass('hidden');
            };
            reader.readAsDataURL(this.files[0]);
        });
    }

</script>
